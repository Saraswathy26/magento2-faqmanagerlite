<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceBlock name="product.info.details">
        <block class="Magento\Framework\View\Element\Template"
               name="faqs.tab" as="faqs" group="detailed_info"
               template="Mageesh_FaqManagerLite::questions/product_questions.phtml">
            <arguments>
                <argument name="sort_order" xsi:type="string">100</argument>
                <argument translate="true" name="title" xsi:type="string">FAQs</argument>
                <argument name="view_model" xsi:type="object">
                    Mageesh\FaqManagerLite\ViewModel\Faqs\Questions
                </argument>
            </arguments>
        </block>
    </referenceBlock>
</page>
